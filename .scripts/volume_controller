#!/bin/bash

system_screen_resolution="$(xrandr | sed -n '/*/p' | awk '{print$1}' | sed -n '1 p')"
xres="$(echo $system_screen_resolution | awk -F 'x' '{print$1}')"
yres="$(echo $system_screen_resolution | awk -F 'x' '{print$2}')"
x1="$(echo "$xres*3/4"  | bc -l)"
x2=${x1%.*}

function audio {
DZENLINE=()
DZENLINE[0]="^ca(1, amixer -q set Master unmute & amixer -q set LFE unmute & amixer -q set PCM 7%- & volume_level $1 ) < ^ca()\n"
DZENLINE[1]="^ca(1, amixer -q set Master unmute & amixer -q set LFE unmute & amixer -q set PCM 7%+ & volume_level $1 ) >  ^ca()\n"
DZENLINE[2]="^ca(1, amixer -q set Master toggle & amixer -q set LFE toggle ) x ^ca()"
echo -e "${DZENLINE[*]}"
}
audio $system_screen_resolution | dzen2 -w 60 -x $x2 -m h -l 3  -fn lat2-10 -y $yres -title-name dzend -bg "#224466" -p -sa center -e 'enterslave=exec:volume_level '$system_screen_resolution''
